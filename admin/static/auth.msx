<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title></title>
	<link rel="stylesheet" href="">
    <style>
*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
    background-color: #f2f2f2;
}
 form{
        padding: 50px;
        }
        label{
        font-size: 20px;
        color: #42a2db;
        }
        input[type="text"],
        input[type="password"]{
        width: 100%;
        background-color: #fff;
        padding: 20px;
        margin-bottom: 20px;
        }
        button{
          color: #fff;
          background-color: #42a2db;
          border: none;
          border-radius: 10px;
          padding: 10px 15px;
          cursor: pointer;
           margin-bottom: 20px;
           width: 100px;
         }
         button:hover{
           background-color: #0e6598;
         }

    </style>
</head>
<body>

	%errormess%

	<form action="/admin" method="POST">
		
		<label for="login">Login</label>
		<input name="login" type="text" id="login" />
		<label for="password">PassWord</label>
		<input name="password" type="password" id="password" />
		<button type="submit">Submit</button>

	</form>

	<script>
		document.forms['0'].addEventListener("submit", e => {
			e.preventDefault()

			const
				login = e.target.elements['0'].value,
				passw = e.target.elements['1'].value

			if (login && passw && passw.length >= 8) {
				e.target.submit()
			} else if (login) {
				console.log("PassWord is not correct");
			} else {
				console.log("Login is not correct");
			}
		})
	</script>

</body>
</html>